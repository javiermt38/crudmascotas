<%- include('template/header', {tituloWeb: 'Página de Servicios'}); %>
<%- include('template/aside'); %>

    <div class="container">
        <h1>Nuestros Servicios</h1>
        <a href="/servicios/crearservicio" class="btn btn-success">Crear Servicio</a>

        <% if (arrayServicios.length > 0) { %>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Servicio</th>
                    <th scope="col">Descripción</th>
                    <th scope="col">Acción</th>
                  </tr>
                </thead>
                <tbody>
                    <% arrayServicios.forEach(servicio => { %>
                        <tr>
                            <th scope="row"><%= servicio.id %></th>
                            <td><%= servicio.servicio %></td>
                            <td><%= servicio.descripcion %></td>
                            <td>
                              <a href="mascotas/<%= servicio.id %>" class="btn btn-warning btn-sm">Editar</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
              </table>    
        <% } %>
    

    </div>
    
<%- include('template/footer'); %>
