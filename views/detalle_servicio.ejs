<%- include('template/header', {tituloWeb: 'Detalle de Mascota'}); %>
<%- include('template/aside'); %>

    <div class="container">
        <h1>Detalle de  Servicios</h1>
        <% if (error) { %>
            <%= mensaje %>
            <a href="/servicios" class="btn btn-dark my-2">Volver</a>
        <% } %>

        <% if (!error) { %>
            <form method="post" id="formEditar">
                <input type="text" class="form-control my-2" name="servicio" id="servicio" value="<%= servicio.servicio %>">
                <input type="text" class="form-control my-2" name="descripcion" id="descripcion" value="<%= servicio.descripcion %>">

                <input type="hidden" name="id" id="id" value="<%= servicio.id %>">
                <div class="d-grid">
                    <button class="btn btn-warning" type="submit">Actualizar</button>
                </div>            
                   
            </form>

            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">Id</th>
                    <th scope="col">servicio</th>
                    <th scope="col">Descripción</th>
                    <th scope="col">Acción</th>
                  </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row"><%= servicio.id %></th>
                        <td><%= servicio.servicio %></td>
                        <td><%= servicio.descripcion %></td>
                        <td>
                            <button class="btn btn-danger btn-sm" id="btnEliminar" data-id="<%= servicio.id %>">
                                Eliminar
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
         
        <% } %>
    </div>

    <script>
        const btnEliminar = document.querySelector('#btnEliminar');
        btnEliminar.addEventListener('click', async() =>{
            // console.log('me diste click');
            const id = btnEliminar.dataset.id;
            // console.log(id)
            try {
                const data = await fetch(`/servicio/${ id }`, {method: 'delete'});
                const respuesta = await data.json();
                console.log(respuesta);
                if (respuesta.estado) {
                    window.location.href = '/servicio';
                } else {
                    console.log(respuesta);
                }
            } catch (error) {
                console.log(error);
            }
        });

        const formEditar = document.querySelector('#formEditar');
        formEditar.addEventListener('submit', async(e) =>{
            e.preventDefault();
            // console.log('submit detenido');
            let servicio = document.querySelector('#servicio').value;
            let descripcion = document.querySelector('#descripcion').value;
            let id = document.querySelector('#id').value;
            console.log(id, servicio, descripcion);
            try {
                const data = await fetch(`/servicio/${ id }`,{
                    method:'put',
                    headers:{
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({servicio, descripcion})
                });
                const respuesta = await data.json();
                // console.log(respuesta);
                if (respuesta.estado) {
                    window.location.href = '/servicio'
                } else {
                    console.log(respuesta)
                }

            } catch (error) {
                console.log(error);
            }
        });
    </script>

    <%- include('template/footer'); %>
